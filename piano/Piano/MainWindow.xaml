        <Rectangle x:Name="NoteA"  Stroke="Black" StrokeThickness="4" Fill="#ffffff" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="115" Margin="575,0,0,0" RenderTransformOrigin="0.5,0.5"/>
