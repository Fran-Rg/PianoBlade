        <Rectangle x:Name="NoteD"  Stroke="Black" StrokeThickness="4" Fill="#ffffff" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="115" RenderTransformOrigin="0.5,0.5" Margin="115,0,0,0">
        </Rectangle>
        <Rectangle x:Name="NoteE"  Stroke="Black" StrokeThickness="4" Fill="#ffffff" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="115" Margin="230,0,0,0" RenderTransformOrigin="0.5,0.5">
